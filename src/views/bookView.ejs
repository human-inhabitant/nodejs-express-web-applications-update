<%-include('header')%>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    <p class="pull-right">
                                        <a href="/auth/logout" class="btn btn-default">Log Out</a>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2 col-sm-3 text-center">
                                    <a class="story-title" href="#">
                                        <img alt="" src="<%=book.details.image_url%>" style="width:100px;height:auto;"/>
                                    </a>
                                </div>
                                <div class="col-md-10 col-sm-8">
                                    <h3><%=book.details.title%></h3>
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <h4>
                                                <span class="label label-default"><%=book.author%></span>
                                            </h4>
                                            <h4>
                                                <span class="label label-info"><%=book.genre%></span>
                                            </h4>
                                        </div>
                                        <div class="col-xs-8 col-xs-offset-1">
                                            <p><%-book.details.description%></p>
                                        </div>
                                    </div>
                                    <br><br>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!--/col-12-->
            </div>
        </div>
<%-include('footer')%>
